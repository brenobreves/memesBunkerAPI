{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",                
    "moduleResolution": "node",        
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "incremental": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}